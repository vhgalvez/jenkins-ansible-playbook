# templates\jenkins-dashboard-middleware.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: {{ jenkins_middleware_name }}
  namespace: {{ jenkins_namespace }}
  labels:
    app.kubernetes.io/name: jenkins
    app.kubernetes.io/component: middleware
    environment: prod
    access: internal
  annotations:
    created-by: ansible
    maintained-by: devops@socialdevs.site
spec:
  basicAuth:
    secret: {{ jenkins_secret_name }}  # Aseg√∫rate que el nombre del Secret sea correcto
    realm: "Jenkins Dashboard"
    removeHeader: true