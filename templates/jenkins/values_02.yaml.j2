controller:
  image:
    repository: jenkins/jenkins
    tag: "2.518-jdk21"
    pullPolicy: IfNotPresent

  installWizard: false
  overwritePlugins: false

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 1) Plugins â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  installPlugins:
    # core
    - kubernetes
    - workflow-aggregator
    - git
    - job-dsl
    - matrix-auth
    - blueocean
    # credentials
    - credentials
    - plain-credentials
    - credentials-binding
    # sources + docker
    - github
    - github-branch-source
    - docker-workflow
    # ui / casâ€‘code
    - configuration-as-code
    - pipeline-stage-view
    - sse-gateway          # â†Â reinstalado (dep. de stageâ€‘view)

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 2) Sidecars â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  sidecars:
    initContainer:    { enabled: true }
    configAutoReload: { enabled: true }

  initContainerEnv:
    - { name: JENKINS_UC,                       value: https://updates.jenkins.io }
    - { name: JENKINS_UC_DOWNLOAD,              value: https://updates.jenkins.io/download }
    - { name: JENKINS_UC_EXPERIMENTAL,          value: https://updates.jenkins.io/experimental }
    - { name: JENKINS_INCREMENTALS_REPO_MIRROR, value: https://repo.jenkins-ci.org/incrementals }

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 3)Â Credencial de administrador â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  admin:
    existingSecret: jenkins-admin
    userKey:        jenkins-admin-user
    passwordKey:    jenkins-admin-password

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 4)Â Variables externas â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  env: []
  envFrom:
    - secretRef: { name: dockerhub-credentials }
    - secretRef: { name: github-ci-token }

  containerEnv:
    - name: JENKINS_UI_USER
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-user } }
    - name: JENKINS_UI_PASS
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-password } }

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 5)Â StartupÂ Probe â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  startupProbe:
    enabled: true
    failureThreshold: 30
    periodSeconds: 10

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 6)Â JCasC â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  JCasC:
    enabled: true
    defaultConfig: false
    configScripts:
      00-security-and-clouds: |
        jenkins:
          systemMessage: "ğŸš€ Jenkins en producciÃ³n"
          securityRealm:
            local:
              allowsSignup: false
              enableCaptcha: false
              users:
                - id: "${JENKINS_UI_USER}"
                  password: "${JENKINS_UI_PASS}"
          authorizationStrategy:
            loggedInUsersCanDoAnything:
              allowAnonymousRead: false

          clouds:
            - kubernetes:
                name: kubernetes
                serverUrl: https://kubernetes.default
                skipTlsVerify: true
                namespace: jenkins
{% raw %}
                jenkinsUrl: "http://{{ .Release.Name }}:8080"
                jenkinsTunnel: "{{ .Release.Name }}-agent:50000"
{% endraw %}
                templates:
                  # â€”â€” default â€”â€” #
                  - name: default
                    label: default
                    containers:
                      - name: busybox
                        image: busybox:1.36
                        command: "cat"

                  # â€”â€” gitops + kaniko â€”â€” #
                  - name: gitops-agent
                    label: gitops-agent
                    containers:
                      - name: nodejs
                        image: node:18-alpine
                        command: "cat"

                      - name: kaniko
                        image: gcr.io/kaniko-project/executor:v1.23.0-debug
                        command: "/busybox/cat"
                        envVars:
                          - envVar:             # â†Â formato correcto
                              key: DOCKER_CONFIG
                              value: /kaniko/.docker
                    volumes:
                      - secretVolume:
                          secretName: dockerhub-config
                          mountPath: /kaniko/.docker

        credentials:
          system:
            domainCredentials:
              - credentials:
                  - usernamePassword:
                      scope: GLOBAL
                      id: dockerhub-credentials
                      description: "DockerHubÂ CI/CD"
                      username: "${DOCKERHUB_USERNAME}"
                      password: "${DOCKERHUB_TOKEN}"
                  - string:
                      scope: GLOBAL
                      id: github-ci-token
                      description: "GitHubÂ TokenÂ CI"
                      secret: "${GITHUB_TOKEN}"

  # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 7)Â Recursos â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  resources:
    requests: { cpu: 500m, memory: 512Mi }
    limits:   { cpu: "2",  memory: 4Gi }

