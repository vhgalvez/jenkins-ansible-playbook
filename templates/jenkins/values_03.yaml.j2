controller:
  image:
    repository: jenkins/jenkins
    tag: "2.518-jdk21"
  installWizard: false
  overwritePlugins: false

  # ── Plugins ────────────────────────────────────────────────────────────────
  installPlugins:
    - kubernetes
    - workflow-aggregator
    - git
    - job-dsl
    - matrix-auth
    - credentials
    - plain-credentials
    - credentials-binding
    - github
    - github-branch-source
    - docker-workflow
    - blueocean
    - configuration-as-code
    - pipeline-stage-view
    - sse-gateway           # dependencia de stage‑view

  # ── Sidecars ───────────────────────────────────────────────────────────────
  sidecars:
    initContainer:    { enabled: true }
    configAutoReload: { enabled: true }

  # ── Credencial admin (SealedSecret) ────────────────────────────────────────
  admin:
    existingSecret: jenkins-admin
    userKey:        jenkins-admin-user
    passwordKey:    jenkins-admin-password

  # ── Secrets → variables de entorno ────────────────────────────────────────
  envFrom:
    - secretRef: { name: dockerhub-credentials }   # DOCKERHUB_USERNAME|TOKEN
    - secretRef: { name: github-ci-token }         # GITHUB_TOKEN

  containerEnv:
    - name: JENKINS_UI_USER
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-user } }
    - name: JENKINS_UI_PASS
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-password } }

  # ── JCasC ──────────────────────────────────────────────────────────────────
  JCasC:
    enabled: true
    defaultConfig: false
    configScripts:
      00-security-and-clouds: |
        jenkins:
          systemMessage: "🚀 Jenkins en producción"
          securityRealm:
            local:
              allowsSignup: false
              users:
                - id: "${JENKINS_UI_USER}"
                  password: "${JENKINS_UI_PASS}"
          authorizationStrategy:
            loggedInUsersCanDoAnything:
              allowAnonymousRead: false

          clouds:
            - kubernetes:
                name: kubernetes
                serverUrl: https://kubernetes.default
                skipTlsVerify: true
                namespace: jenkins
{% raw %}
                jenkinsUrl: "http://{{ .Release.Name }}:8080"
                jenkinsTunnel: "{{ .Release.Name }}-agent:50000"
{% endraw %}
                templates:
                  # — default ————————————————————————————————————————
                  - name: default
                    label: default
                    containers:
                      - name: busybox
                        image: busybox:1.36
                        command: "cat"
                        ttyEnabled: true

                  # — gitops + kaniko ————————————————————————————————
                  - name: gitops-agent
                    label: gitops-agent
                    containers:
                      - name: nodejs
                        image: node:18-alpine
                        command: "cat"
                        ttyEnabled: true
                      - name: kaniko
                        image: gcr.io/kaniko-project/executor:v1.23.0-debug
                        command: "/busybox/cat"
                        ttyEnabled: true
                        envVars:                # ← NIVEL ‘envVar’ añadido
                          - envVar:
                              key: DOCKER_CONFIG
                              value: /kaniko/.docker
                    volumes:
                      - secretVolume:
                          mountPath: /kaniko/.docker
                          secretName: dockerhub-config

        credentials:
          system:
            domainCredentials:
              - credentials:
                  - usernamePassword:
                      id: dockerhub-credentials
                      username: "${DOCKERHUB_USERNAME}"
                      password: "${DOCKERHUB_TOKEN}"
                  - string:
                      id: github-ci-token
                      secret: "${GITHUB_TOKEN}"

  # ── Recursos ───────────────────────────────────────────────────────────────
  resources:
    requests: { cpu: 500m, memory: 512Mi }
    limits:   { cpu: "2",  memory: 4Gi }

# ── Persistencia (Longhorn) ────────────────────────────────────────────────
persistence:
  enabled: true
  storageClass: "{{ jenkins_storage_class }}"
  size: 8Gi
  annotations: { "longhorn.io/replica-count": "1" }