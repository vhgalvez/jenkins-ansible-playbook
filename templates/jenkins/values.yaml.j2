controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
      traefik.ingress.kubernetes.io/redirect-entry-point: websecure
    paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: jenkins
            port:
              number: 8080
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"
        # secretName: jenkins-tls  # Solo si usas TLS personalizado

  jenkinsOpts: ""  # ⚠️ No pongas "--prefix=/" a menos que Jenkins esté en un subpath

  JCasC:
    enabled: false

  installPlugins: []  # Ejemplo: ["kubernetes", "git", "workflow-aggregator"]

  serviceType: ClusterIP