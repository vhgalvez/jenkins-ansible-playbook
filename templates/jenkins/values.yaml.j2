# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
    paths:
      - path: /
        pathType: Prefix
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"
        secretName: jenkins-tls  # Requiere un secreto TLS vÃ¡lido

  jenkinsOpts: ""  # ðŸ”¥ Ojo: no pongas "--prefix=/" si Jenkins ya responde en "/"

  JCasC:
    enabled: false

  installPlugins: []  # Ejemplo: ["kubernetes", "git", "workflow-aggregator"]

  serviceType: ClusterIP  # O NodePort si quieres exponerlo directamente
  nodePort: 32000