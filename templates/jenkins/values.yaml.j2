# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
    paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: jenkins
            port:
              number: 8080
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"

  jenkinsOpts: "--prefix=/"  # Importante para que Jenkins responda correctamente desde /

  JCasC:
    enabled: false  # Configuration as Code desactivado

  installPlugins: []  # Puedes agregar plugins aqu√≠

  serviceType: NodePort
  nodePort: 32000  # Para debugging si falla el Ingress