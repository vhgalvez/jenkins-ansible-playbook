###############################################################################
# Jenkins – Producción (rev‑21 · stable‑fix‑envVar)
###############################################################################

controller:
  image:
    repository: jenkins/jenkins
    tag: "2.518-jdk21"
  installWizard: false
  overwritePlugins: false

  # ── Plugins (idénticos) ───────────────────────────────────────────────────
  installPlugins:
    # API / libs
    - structs
    - display-url-api
    - jackson2-api
    - commons-lang3-api
    - commons-text-api
    - snakeyaml-api
    - plugin-util-api
    - jjwt-api
    - okhttp-api
    - jdk-tool
    - scm-api
    - instance-identity
    - bouncycastle-api
    - token-macro
    # Core / SCM
    - configuration-as-code
    - kubernetes
    - matrix-auth
    - credentials
    - plain-credentials
    - credentials-binding
    - ssh-credentials
    - git
    - github
    - github-branch-source
    # Pipeline
    - workflow-aggregator
    - script-security
    # Stage View / SSE
    - sse-gateway
    # Mail
    - jakarta-mail-api
    - jakarta-activation-api
    - mailer
    # Docker
    - docker-workflow

  # ── Sidecars ──────────────────────────────────────────────────────────────
  sidecars:
    initContainer:    { enabled: true }
    configAutoReload: { enabled: false }   # evita bucles de reinicio

  # ── Credencial admin ──────────────────────────────────────────────────────
  admin:
    existingSecret: jenkins-admin
    userKey:        jenkins-admin-user
    passwordKey:    jenkins-admin-password

  # ── Variables de entorno ──────────────────────────────────────────────────
  containerEnv:
    - name: JENKINS_UI_USER
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-user } }
    - name: JENKINS_UI_PASS
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-password } }

    - name: DOCKERHUB_USERNAME
      valueFrom: { secretKeyRef: { name: dockerhub-credentials, key: DOCKERHUB_USERNAME } }
    - name: DOCKERHUB_TOKEN
      valueFrom: { secretKeyRef: { name: dockerhub-credentials, key: DOCKERHUB_TOKEN } }

    - name: GITHUB_PAT
      valueFrom: { secretKeyRef: { name: github-ci-token, key: GITHUB_TOKEN } }

  # ── JCasC ─────────────────────────────────────────────────────────────────
  JCasC:
    enabled: true
    defaultConfig: false
    configScripts:

      00-security-and-clouds: |
        jenkins:
          systemMessage: "🚀 Jenkins en producción"
          securityRealm:
            local:
              allowsSignup: false
              users:
                - id: "${JENKINS_UI_USER}"
                  password: "${JENKINS_UI_PASS}"
          authorizationStrategy:
            loggedInUsersCanDoAnything:
              allowAnonymousRead: false

          clouds:
            - kubernetes:
                name: kubernetes
                serverUrl: https://kubernetes.default
                skipTlsVerify: true
                namespace: jenkins
{% raw %}
                jenkinsUrl: "http://{{ .Release.Name }}:8080"
                jenkinsTunnel: "{{ .Release.Name }}-agent:50000"
{% endraw %}
                templates:
                  # — default —
                  - name: default
                    label: default
                    containers:
                      - name: busybox
                        image: busybox:1.36
                        command: "cat"       # ← string ✔
                        ttyEnabled: true

                  # — gitops + kaniko —
                  - name: gitops-agent
                    label: gitops-agent
                    containers:
                      - name: nodejs
                        image: node:18-alpine
                        command: "cat"       # ← string ✔
                        ttyEnabled: true
                      - name: kaniko
                        image: gcr.io/kaniko-project/executor:v1.23.0-debug
                        command: "/busybox/cat"   # ← string ✔
                        ttyEnabled: true
                        envVars:                  # ← arreglo corregido ✔
                          - envVar:
                              key: DOCKER_CONFIG
                              value: /kaniko/.docker
                    volumes:
                      - secretVolume:
                          secretName: dockerhub-config
                          mountPath: /kaniko/.docker

        credentials:
          system:
            domainCredentials:
              - credentials:
                  - usernamePassword:
                      id: dockerhub-credentials
                      scope: GLOBAL
                      description: "DockerHub CI"
                      username: "${DOCKERHUB_USERNAME}"
                      password: "${DOCKERHUB_TOKEN}"
                  - string:
                      id: github-ci-token
                      scope: GLOBAL
                      description: "GitOps PAT"
                      secret: "${GITHUB_PAT}"

  # ── Recursos ──────────────────────────────────────────────────────────────
  resources:
    requests: { cpu: 500m, memory: 512Mi }
    limits:   { cpu: "2",  memory: 4Gi }

# ── Persistencia (Longhorn) ────────────────────────────────────────────────
persistence:
  enabled: true
  storageClass: "{{ jenkins_storage_class }}"
  size: 8Gi
  annotations:
    "longhorn.io/replica-count": "1"