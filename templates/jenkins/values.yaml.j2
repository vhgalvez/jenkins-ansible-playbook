# roles\jenkins\templates\values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"  # ej. jenkins.local
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
    paths:
      - path: /
        pathType: Prefix
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"  # TLS opcional para https://jenkins.local

  jenkinsOpts: "--prefix=/"  # Importante para rutas en "/"

  JCasC:
    enabled: false  # Desactivado si no est√°s usando Jenkins Configuration as Code

  installPlugins: []  # Puedes rellenar esto luego con los plugins necesarios

  serviceType: NodePort
  nodePort: 32000  # Para acceso directo si lo necesitas (ej. troubleshooting)