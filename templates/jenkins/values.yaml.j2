# templates/traefik-dashboard-ingress.yaml
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: traefik-dashboard
  namespace: kube-system
spec:
  rules:
  - host: traefik.local  # Dominio para acceder al dashboard de Traefik
    http:
      paths:
      - path: /dashboard  # Ruta para acceder al dashboard de Traefik
        pathType: Prefix  # Permite subrutas como /dashboard/xyz
        backend:
          service:
            name: traefik  # El nombre del servicio de Traefik en Kubernetes
            port:
              number: 8080  # El puerto del servicio de Traefik para el dashboard
