    # â†³ APIs / libs
    - structs
    - display-url-api
    - jackson2-api
    - commons-lang3-api
    - commons-text-api
    - snakeyaml-api
    - plugin-util-api
    - jjwt-api
    - okhttp-api
    - jdk-tool
    - scm-api
    - instance-identity
    - bouncycastle-api
    - token-macro

