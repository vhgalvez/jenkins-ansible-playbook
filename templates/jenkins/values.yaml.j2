# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
      traefik.ingress.kubernetes.io/redirect-entry-point: websecure
    paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: jenkins
            port:
              number: 8080
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"
        # secretName: jenkins-tls  # O com√©ntalo si no tienes certificado

  jenkinsOpts: ""  # No uses "--prefix=/" salvo que montes Jenkins en un subpath

  JCasC:
    enabled: false

  installPlugins: []

  serviceType: ClusterIP