# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
    path: /
    pathType: Prefix
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"

  # Importante: no uses "--prefix=/" a menos que quieras cambiar el contexto base
  jenkinsOpts: ""

  JCasC:
    enabled: false

  installPlugins: []  # Agrega aqu√≠ plugins si los deseas

  serviceType: ClusterIP  # Usar ClusterIP si tienes Ingress funcionando