# roles\jenkins\templates\values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"  # ej. jenkins.local
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
    paths:
      - path: /
        pathType: Prefix
        backend:
          serviceName: jenkins
          servicePort: 8080
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"

  jenkinsOpts: "--prefix=/"

  JCasC:
    enabled: false

  installPlugins: []

  serviceType: NodePort
  nodePort: 32000