# templates\jenkins\values.yaml.j2
controller:
  serviceType: ClusterIP
  servicePort: 8081
  targetPort: 8081
  jenkinsOpts: ""  # ⚠️ NO uses --prefix=/ o fallará el acceso Ingress

  ingress:
    enabled: true
    ingressClassName: traefik
    hostName: "jenkins.cefaslocalserver.com"
    annotations:
      traefik.ingress.kubernetes.io/router.entrypoints: websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
      traefik.ingress.kubernetes.io/auth-type: basic
      traefik.ingress.kubernetes.io/auth-secret: jenkins-auth-secret
    paths:
      - path: /
        pathType: Prefix

  healthProbes:
    livenessProbe:
      httpGet:
        path: /login
        port: 8081
      initialDelaySeconds: 60
      periodSeconds: 10
      failureThreshold: 3
    readinessProbe:
      httpGet:
        path: /login
        port: 8081
      initialDelaySeconds: 60
      periodSeconds: 10
      failureThreshold: 3
    startupProbe:
      httpGet:
        path: /login
        port: 8081
      initialDelaySeconds: 60
      periodSeconds: 10
      failureThreshold: 30

  JCasC:
    enabled: false

  installPlugins: []