# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
    path: /
    pathType: Prefix
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"
        secretName: jenkins-tls  # Aseg√∫rate de crear este secreto si usas TLS

  jenkinsOpts: "--prefix=/"

  JCasC:
    enabled: false  # Puedes activarlo si usas Jenkins Configuration as Code

  installPlugins: []  # Ejemplo: ["kubernetes", "git", "workflow-aggregator"]

  serviceType: ClusterIP  # Usa NodePort solo si no tienes Ingress funcionando
  nodePort: 32000  # Solo aplica si cambias serviceType a NodePort