controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
    paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: jenkins
            port:
              number: 8080
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"

  jenkinsOpts: "--prefix=/"  # Importante para evitar errores de ruta con Ingress

  JCasC:
    enabled: false  # Puedes habilitar esto si usas Jenkins Configuration as Code

  installPlugins: []  # Agrega plugins aquí si lo deseas (ej. kubernetes, git, pipeline)

  serviceType: NodePort
  nodePort: 32000  # Útil para acceso directo si falla el Ingress