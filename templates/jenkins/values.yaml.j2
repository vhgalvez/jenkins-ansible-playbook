controller:
  image:
    repository: jenkins/jenkins
    tag: "2.518-jdk21"
  installWizard: false
  overwritePlugins: false          # evitamos que Helm machaque plugins al actualizar

  # â”€â”€ Plugins â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  installPlugins:
    # Core / API libs
    - structs
    - display-url-api
    - jackson2-api
    - commons-lang3-api
    - commons-text-api
    - snakeyaml-api
    - plugin-util-api
    - jjwt-api
    - okhttp-api
    - jdk-tool
    - scm-api
    - instance-identity
    - bouncycastle-api
    - token-macro

    # Base funcional
    - configuration-as-code
    - kubernetes
    - matrix-auth
    - credentials
    - ssh-credentials
    - plain-credentials
    - credentials-binding
    - git
    - github
    - github-branch-source

    # Pipeline (detallado, sin agregador)
    - script-security
    - workflow-api
    - workflow-step-api
    - workflow-support
    - workflow-basic-steps
    - workflow-scm-step
    - workflow-durable-task-step
    - workflow-cps
    - workflow-job
    - pipeline-build-step
    - pipeline-stage-step
    - pipeline-model-definition
    - pipeline-rest-api
    - pipeline-stage-view

    # Mail / Jakarta
    - jakarta-mail-api
    - jakarta-activation-api
    - mailer

    # CI / UI
    - docker-workflow
    - blueocean
    - sse-gateway
    - event-router             # dependencia de sseâ€‘gateway

  # â”€â”€ Sidecars â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  sidecars:
    initContainer:    { enabled: true }
    configAutoReload: { enabled: true }

  # â”€â”€ Credencial admin â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  admin:
    existingSecret: jenkins-admin
    userKey:        jenkins-admin-user
    passwordKey:    jenkins-admin-password

  # â”€â”€ Variables de entorno (sin envFrom) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  containerEnv:
    - name: JENKINS_UI_USER
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-user } }
    - name: JENKINS_UI_PASS
      valueFrom: { secretKeyRef: { name: jenkins-admin, key: jenkins-admin-password } }

    - name: DOCKERHUB_USERNAME
      valueFrom: { secretKeyRef: { name: dockerhub-credentials, key: DOCKERHUB_USERNAME } }
    - name: DOCKERHUB_TOKEN
      valueFrom: { secretKeyRef: { name: dockerhub-credentials, key: DOCKERHUB_TOKEN } }

    - name: GITHUB_PAT
      valueFrom: { secretKeyRef: { name: github-ci-token, key: GITHUB_TOKEN } }

  # â”€â”€ JCasC â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  JCasC:
    enabled: true
    defaultConfig: false
    configScripts:
      00-security-and-clouds: |
        jenkins:
          systemMessage: "ðŸš€ Jenkins en producciÃ³n"
          securityRealm:
            local:
              allowsSignup: false
              users:
                - id: "${JENKINS_UI_USER}"
                  password: "${JENKINS_UI_PASS}"
          authorizationStrategy:
            loggedInUsersCanDoAnything:
              allowAnonymousRead: false

          clouds:
            - kubernetes:
                name: kubernetes
                serverUrl: https://kubernetes.default
                skipTlsVerify: true
                namespace: jenkins
{% raw %}
                jenkinsUrl: "http://{{ .Release.Name }}:8080"
                jenkinsTunnel: "{{ .Release.Name }}-agent:50000"
{% endraw %}
                templates:
                  - name: default
                    label: default
                    containers:
                      - name: busybox
                        image: busybox:1.36
                        command: ["cat"]
                        ttyEnabled: true

                  - name: gitops-agent
                    label: gitops-agent
                    containers:
                      - name: nodejs
                        image: node:18-alpine
                        command: ["cat"]
                        ttyEnabled: true
                      - name: kaniko
                        image: gcr.io/kaniko-project/executor:v1.23.0-debug
                        command: ["/busybox/cat"]
                        ttyEnabled: true
                        envVars:
                          - envVar:              # âœ… forma correcta
                              key: DOCKER_CONFIG
                              value: /kaniko/.docker
                    volumes:
                      - secretVolume:
                          secretName: dockerhub-config
                          mountPath: /kaniko/.docker

        credentials:
          system:
            domainCredentials:
              - credentials:
                  - usernamePassword:
                      scope: GLOBAL
                      id: dockerhub-credentials
                      description: "DockerHub CI"
                      username: "${DOCKERHUB_USERNAME}"
                      password: "${DOCKERHUB_TOKEN}"

                  - string:
                      scope: GLOBAL
                      id: github-ci-token
                      description: "GitOps PAT"
                      secret: "${GITHUB_PAT}"

  # â”€â”€ Recursos â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  resources:
    requests: { cpu: 500m, memory: 512Mi }
    limits:   { cpu: "2", memory: 4Gi }

# â”€â”€ Persistencia (Longhorn) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
persistence:
  enabled: true
  storageClass: "{{ jenkins_storage_class }}"
  size: 8Gi
  annotations: { "longhorn.io/replica-count": "1" }