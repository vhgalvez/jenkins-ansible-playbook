# roles/jenkins/templates/values.yaml.j2
controller:
  ingress:
    enabled: true
    hostName: "{{ jenkins_ingress_host }}"
    ingressClassName: traefik
    annotations:
      kubernetes.io/ingress.class: traefik
    tls:
      - hosts:
          - "{{ jenkins_ingress_host }}"

  jenkinsOpts: "--prefix=/"  # Importante para evitar errores de ruta

  JCasC:
    enabled: false  # Puedes activar esto luego

  installPlugins: []  # Plugins opcionales

  serviceType: NodePort
  nodePort: 32000