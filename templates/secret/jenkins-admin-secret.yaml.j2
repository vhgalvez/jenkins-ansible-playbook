# templates/secret/jenkins-admin-secret.yaml.j2
apiVersion: v1
kind: Secret
metadata:
  name: {{ jenkins_admin_secret_name }}
  namespace: {{ jenkins_namespace }}
type: Opaque
stringData:
  # claves que lee Helm
  {{ jenkins_admin_user_key }}: "{{ jenkins_auth_user_ui }}"
  {{ jenkins_admin_pass_key }}: "{{ jenkins_auth_pass_ui }}"
  # mismas credenciales expuestas para JCasC
  JENKINS_UI_USER: "{{ jenkins_auth_user_ui }}"
  JENKINS_UI_PASS: "{{ jenkins_auth_pass_ui }}"