# templates\jenkins-dashboard-ingressroute.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: {{ jenkins_middleware_name }}
  namespace: {{ jenkins_namespace }}
  labels:
    app.kubernetes.io/name: jenkins
    app.kubernetes.io/component: ingressroute
    environment: prod
    access: internal
  annotations:
    created-by: ansible
    maintained-by: devops@socialdevs.site
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`{{ jenkins_dashboard_domain }}`)
      kind: Rule
      services:
        - name: jenkins
          port: 8080
  middlewares:
    - name: {{ jenkins_middleware_name }}
      namespace: {{ jenkins_namespace }}